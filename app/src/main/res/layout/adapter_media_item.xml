<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="entity"
            type="io.wax911.sample.core.model.show.Show" />
    </data>

    <FrameLayout
        android:layout_margin="@dimen/lg_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <io.wax911.support.ui.view.image.SupportWideImageView
            android:id="@+id/showTrailer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height"
            app:imageUrl="@{entity.getBanner()}"
            tools:scaleType="centerCrop"/>

        <io.wax911.support.ui.view.text.SingleLineTextView
            android:id="@+id/showTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_gravity="bottom"
            android:text="@{entity.title}"
            android:textStyle="bold"
            android:padding="@dimen/spacing_xs"
            android:background="?android:colorBackground"
            android:textAppearance="?attr/textAppearanceBody2"
            tools:text="@tools:sample/lorem" />

    </FrameLayout>

</layout>