<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/container">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/stateImage"
        android:layout_width="@dimen/avatar_size_xl"
        android:layout_height="@dimen/avatar_size_xl"
        android:layout_marginBottom="@dimen/lg_margin"
        android:src="@drawable/empty_icon" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <io.wax911.support.custom.widget.SupportProgress
            android:id="@+id/stateProgress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/lg_margin" />

        <io.wax911.support.custom.widget.SingleLineTextView
            android:id="@+id/stateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Loading" />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
